@model MonitoriaMVC.Models.Cliente

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<form asp-action="Editar" method="post">
    <div class="form-group">
        <label for="nome">ID</label>
        <input type="number" class="form-control" aria-describedby="Id" asp-for="ID" value="@Model.ID" disabled>
    </div>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" aria-describedby="nome" asp-for="Nome" value="@Model.Nome">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" aria-describedby="email" asp-for="Email" value="@Model.Email">
    </div>
    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="password" class="form-control" asp-for="Senha" value="@Model.Senha">
    </div>
    <button type="submit" class="btn btn-warning">Editar</button>
</form>

